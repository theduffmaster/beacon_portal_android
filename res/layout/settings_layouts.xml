<?xml version="1.0" encoding="utf-8"?>


<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/Linear_Layout_Settings"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/Relative_Layout_Settings"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/app_start" >

        <TextView
            android:id="@+id/textViewTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
             
            android:singleLine="true"
            android:text="Choose What to Show at App Start"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            
            android:singleLine="true"
            android:text="Show &quot;Schedule&quot; or &quot;Homework Due&quot;"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
         
        android:layout_alignBottom="@+id/Relative_Layout_Settings"
        android:background="#D3D3D3" />

    <RelativeLayout
        android:id="@+id/Relative_Layout_Settings_Start"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/app_start" >

        <TextView
            android:id="@+id/textViewTitles_Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="Refresh Homeworkdue at start"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewSubTitle_Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/checkBox1"
            android:layout_alignParentLeft="true"
            android:maxLines="2"
            android:singleLine="true"
            android:text="HomeworkDue will refresh on app start"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>
    
    <View
        android:id="@+id/view5"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
         
        android:layout_alignBottom="@+id/Relative_Layout_Settings"
        android:background="#D3D3D3" />
    
    <RelativeLayout
        android:id="@+id/Relative_Layout_Settings_Edit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/app_start" >

        <TextView
            android:id="@+id/textViewTitles_Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="Edit Bands Button Position"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewSubTitle_Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/checkBoxEdit"
            android:layout_alignParentLeft="true"
            android:maxLines="2"
            android:singleLine="true"
            android:text="Floating Edit Button in actionbar"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkBoxEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>

</LinearLayout>



