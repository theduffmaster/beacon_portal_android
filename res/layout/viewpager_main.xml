<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeworkdue_container" 
    >
 
        <com.astuetz.PagerSlidingTabStrip
    android:id="@+id/pagerTabStrip"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    app:pstsIndicatorColor="#ffffff" 
    app:pstsDividerColor="#4285f4"
    app:pstsUnderlineHeight="0dp"
    app:pstsIndicatorHeight="2dp"
    app:pstsShouldExpand="true"
    android:textColor="#ffffff"
    android:textSize="14sp"
    />
    
   <com.bernard.beaconportal.activities.ScrollLock
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pagerTabStrip" 
        ptrScrollingWhileRefreshingEnabled="true"
        />
 
   <ImageView
          android:id="@+id/material_shadow_image"
        android:src="@drawable/material_shadow270"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="48dp"
        />
   
</RelativeLayout>
